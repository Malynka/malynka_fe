{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@hooks": ["src/hooks"],
      "@mui/styled-engine": ["./node_modules/@mui/styled-engine-sc"],
      "@pages": ["src/pages"],
      "*": ["node_modules/*"]
    },
    "jsx": "react"
  },
  "include": ["src/**/*"]
}
