{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@hooks": ["src/hooks"],
      "@mui/styled-engine": ["node_modules/@mui/styled-engine-sc"],
      "@types": ["src/types.ts"],
      "@atoms": ["src/atoms"],
      "@molecules": ["src/molecules"],
      "@organisms": ["src/organisms"],
      "@pages": ["src/pages"],
      "@theme": ["src/app/theme"],
      "@typography": ["src/typography"],
      "@utils": ["src/utils.ts"],
      "*": ["node_modules/*"]
    },
    "jsx": "react"
  },
  "include": ["src/**/*"]
}
